<testsuites>
    <testsuite name="PHP Unit Testing">
        <directory suffix="Test.php" phpVersion="7.1.3" phpVersionOperator=">=">./bastas-view/tests</directory>
    </testsuite>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./bastas-view/src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="./bastas-view/tests/code-coverage-reports/clover.xml"/>
        <log type="coverage-html" target="./bastas-view/tests/code-coverage-reports/" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70" />
        <log type="testdox-text" target="./bastas-view/tests/code-coverage-reports/executed.txt"/>
    </logging>
</testsuites>